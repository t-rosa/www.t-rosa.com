---
import { Font } from "astro:assets";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  keywords?: string;
  structuredData?: Record<string, any>;
}

const {
  title = "Toma ROSA · Développeur Web Full Stack · Toulouse",
  description = "Développeur Full Stack spécialisé en cartographie et applications web. Expert React, ASP.NET Core, OpenLayers. Projets SaaS livrés.",
  ogImage = "/og-image.png",
  keywords = "développeur web, full stack, react, asp.net core, openlayers, cartographie, SaaS, toulouse, portfolio",
  structuredData,
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      keywords={keywords}
      canonical={Astro.url.href}
      robots="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
      twitterCreator="@t_rosa"
      structuredData={structuredData}
    />
    <meta name="apple-mobile-web-app-title" content="t-rosa" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body><Font cssVariable="--font-montserrat" preload />
  <Font cssVariable="--font-ibm-plex-mono" preload />
  <Font cssVariable="--font-inter" preload />
</html>
