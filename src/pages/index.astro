---
import Header from "../components/header.astro";
import Hero from "../components/hero.astro";
import Projects from "../components/projects.astro";
import Tools from "../components/tools.astro";
import Layout from "../layouts/Layout.astro";

const title = "Toma ROSA · Développeur Web Full Stack · Portfolio";
const description =
  "Développeur Full Stack spécialisé en cartographie. Expert React, ASP.NET Core, OpenLayers.";
const keywords =
  "développeur web, full stack, react, asp.net core, openlayers, cartographie, SaaS, toulouse, frontend, backend, javascript, typescript, c#";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Toma ROSA",
  url: "https://www.t-rosa.com",
  description: description,
  image: "https://www.t-rosa.com/og-image.png",
  sameAs: [
    "https://github.com/t-rosa",
    "https://www.linkedin.com/in/toma-rosa/",
    "https://bsky.app/profile/t-rosa.com",
  ],
  jobTitle: "Développeur Web Full Stack",
  location: {
    "@type": "City",
    name: "Toulouse",
  },
  worksFor: {
    "@type": "Organization",
    name: "Astradal",
    url: "https://www.astradal.com",
  },
  knowsAbout: [
    "React",
    "TypeScript",
    "ASP.NET Core",
    "OpenLayers",
    "PostgreSQL",
    "Cartographie",
    "Web Development",
    "Full Stack Development",
  ],
};
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
>
  <Header />
  <Hero />
  <Projects />
  <Tools />
</Layout>
